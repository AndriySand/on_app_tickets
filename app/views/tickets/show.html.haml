%p#notice= notice

%p
  %b User name:
  = @ticket.user_name
%p
  %b User email:
  = @ticket.user_email
%p
  %b Reference number:
  = @ticket.reference_number
%p
  %b Subject:
  = @ticket.subject
%p
  %b Body:
  = @ticket.body
%p
  %b Status:
  = @ticket.status
%p
  %b Department:
  = @ticket.department

= link_to 'view the history of ticket', ticket_history_path(@ticket)
%p
- if current_user
  = link_to 'Waiting for Staff Responce', tickets_path(:status => 'Waiting for Staff Responce')
  %p
    = label_tag 'Take responsibilty'
    = check_box_tag 'manager_id', 'yes', false, {:user_id => current_user.id, :ticket_id => @ticket.id}
  %h2
    Give answer to customer
    = form_for [@ticket, @ticket.replies.build] do |f|

      .field
        = f.label :body_of_responce
        = f.text_area :body, :cols => 70
        = f.hidden_field(:author_id, :value => current_user.id)
      .actions
        = f.submit 'Save'
